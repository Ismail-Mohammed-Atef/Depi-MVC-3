@model List<Instructor>

<h1>Hello from Instructors</h1>

<a href="/Instructor/Add">Add Instructor</a>
<table class="table">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">Salary</th>
            <th scope="col">Address</th>
            <th scope="col">Img</th>
            <th scope="col">Course</th>
            <th scope="col">Department</th>
            <th scope="col">Details</th>
            <th scope="col">Update</th>
            <th scope="col">Remove</th>


        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Name</td>
                <td>@item.Salary</td>
                <td>@item.Address</td>
                <td><img src="/Pictures/@item.Img"/></td>
                <td>@item.Course.Name</td>
                <td>@item.Department.Name</td>
                <td> <a href="/Instructor/Details/@item.Id">Get Details</a></td>
                <td> <a href="/Instructor/Update/@item.Id">Update</a></td>
                <td> <a href="/Instructor/Remove/@item.Id">Remove</a></td>
            </tr>
        }
    </tbody>
</table>
