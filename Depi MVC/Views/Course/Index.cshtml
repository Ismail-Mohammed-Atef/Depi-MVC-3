@{
}
@model List<Course>

<h1>Hello from Courses</h1>

<a href="/Course/Add">Add New Course</a>
<table class="table">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">MaxDegree </th>
            <th scope="col">MinDegree </th>
            <th scope="col">Details </th>
            <th scope="col">Update </th>
            <th scope="col">Remove </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Name</td>
                <td>@item.MaxDegree</td>
                <td>@item.MinDegree</td>
                <td> <a href="/Course/Details/@item.Id">Get Details</a></td>
                <td> <a href="/Course/Update/@item.Id">Update</a></td>
                <td> <a href="/Course/Remove/@item.Id">Remove</a></td>
            </tr>
        }
    </tbody>
</table>

