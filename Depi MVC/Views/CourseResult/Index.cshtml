@model List<CourseResults>

<h1>Hello from CourseResults</h1>

<a href="/CourseResult/Add">Add CourseResult</a>
<table class="table">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Degree</th>
            <th scope="col">Course</th>
            <th scope="col">Trainee</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Degree</td>
                <td>@item.Course.Name</td>
                <td>@item.Trainee.Name</td>
                <td> <a href="/CourseResult/Details/@item.Id">Get Details</a></td>
                <td> <a href="/CourseResult/Update/@item.Id">Update</a></td>
                <td> <a href="/CourseResult/Remove/@item.Id">Remove</a></td>
            </tr>
        }
    </tbody>
</table>
