@{
    var trainees = new SelectList(ViewData["Trainees"] as IEnumerable<Trainee>, "Id", "Name");
    var courses = new SelectList(ViewData["Courses"] as IEnumerable<Course>, "Id", "Name");

}
@model CourseResults
<form asp-action="Update" method="post">
    <div asp-validation-summary="All"></div>

    <div class="form-group">
        <label asp-for="Degree" class="col-form-label"></label>
        <input asp-for="Degree" class="form-control" />
        <span asp-validation-for="Degree" class="text-danger"></span>

    </div>
    
    <div class="form-group">
        <label asp-for="Trainee" class="col-form-label"></label>
        <select asp-for="TraineeId" asp-items="@trainees" class="form-control">
            <option value="@null">-- choose the Trainee --</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Course" class="col-form-label"></label>
        <select asp-for="CrsId" asp-items="@courses" class="form-control">
            <option value="@null">-- choose the Course --</option>
        </select>
    </div>

    <input type="submit" value="Update" class="btn btn-primary" />
    <a asp-controller="CourseResult" asp-action="Index" class="btn btn-light">Back To List</a>
</form>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>