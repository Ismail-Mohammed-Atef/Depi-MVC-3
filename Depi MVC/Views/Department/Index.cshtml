@{
}
@model List<Department>

<h1>Hello from Department</h1>

<a href="/Department/Add">Add New Department</a>
<table class="table">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">ManagerName </th>
            <th scope="col">Details </th>
            <th scope="col">Update </th>
            <th scope="col">Remove </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Name</td>
                <td>@item.ManagerName</td>
                <td> <a href="/Department/Details/@item.Id">Get Details</a></td>
                <td> <a href="/Department/Update/@item.Id">Update</a></td>
                <td> <a href="/Department/Remove/@item.Id">Remove</a></td>
            </tr>
        }
    </tbody>
</table>

